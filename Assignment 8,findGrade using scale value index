
CREATE FUNCTION fn_GetGrade 
(
  @Marks int
)
RETURNS varchar(25)
AS
BEGIN
    DECLARE @Grade varchar(25)

        SWITCH (
            WHEN @Marks > 100 THEN SET @Grade = 'Invalid marks. Marks should be less than 100' 
            WHEN @Marks > 90 and @Marks <= 100 THEN SET @Grade = 'A'
            WHEN @Marks > 80 and @Marks <= 90 THEN SET @Grade = 'B'
            WHEN @Marks > 70 and @Marks <= 80 THEN SET @Grade = 'C'
            WHEN @Marks > 60 and @Marks <= 70 THEN SET @Grade = 'D'
            WHEN @Marks > 35 and @Marks <= 60 THEN SET @Grade = 'E'
            ELSE SET @Grade = 'F'
        )

    RETURN @Grade
END


--Execution
SELECT dbo.GetGrade(85) -- Returns 'B'
SELECT dbo.GetGrade(120) -- Returns 'Invalid marks. Marks should be less than 100'
